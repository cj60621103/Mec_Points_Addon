<?xml version="1.0"?>
<layout version="0.1.0">
	 <catalog_product_view translate="label">
		<reference name="head">
			<action method="addJs"><script>jquery/jquery-1.10.2.min.js</script></action>
			<action method="addJs"><script>jquery/jquery.noConflict.js</script></action>
		</reference>
		 <reference name="content">
			<reference name="product.info">
				<reference name="product.info.addtocart">
					<action method="setTemplate"><template>mec/catalog/product/view/addtocart.phtml</template></action>
				</reference>
			</reference>
		 </reference>
	 </catalog_product_view>
	 
	 
	 <checkout_cart_index translate="label">
		<reference name="content">
			<reference name="checkout.cart">
				<action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>mec/checkout/cart/item/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>mec/checkout/cart/item/default.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>mec/checkout/cart/item/default.phtml</template></action>
			</reference>
		</reference>
	 </checkout_cart_index>
	 
	 
	 
	 <sales_order_view translate="label">
		<reference name="my.account.wrapper">
			<reference name="sales.order.view">
				<reference name="order_items">
					<action method="setTemplate"><template>mec/sales/order/items.phtml</template></action>
					<action method="addItemRender"><type>default</type><block>sales/order_item_renderer_default</block><template>mec/sales/order/items/renderer/default.phtml</template></action>
                    <action method="addItemRender"><type>grouped</type><block>sales/order_item_renderer_grouped</block><template>mec/sales/order/items/renderer/default.phtml</template></action>
					<reference name="order_totals">
						<action method="setLabelProperties"><value>colspan="7" class="a-right"</value></action>
					</reference>
				</reference>
			</reference>
		</reference>
	 </sales_order_view>
	 
	 <catalog_category_default translate="label">
		<reference name="content">
			<reference name="category.products">
				<reference name="product_list">
					<action method="setTemplate"><template>mec/catalog/product/list.phtml</template></action>
				</reference>
			</reference>
		</reference>
	 </catalog_category_default>
	 
	 
	 <catalog_category_layered translate="label">
		<reference name="content">
			<reference name="category.products">
				<reference name="product_list">
					<action method="setTemplate"><template>mec/catalog/product/list.phtml</template></action>
				</reference>
			</reference>
		</reference>
	</catalog_category_layered>
	 
	
	<checkout_onepage_review translate="label">
		<reference name="root">
			<action method="setTemplate"><template>mec/checkout/onepage/review/info.phtml</template></action>
			<action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>mec/checkout/onepage/review/item.phtml</template></action>
            <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>mec/checkout/onepage/review/item.phtml</template></action>
            <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>mec/checkout/onepage/review/item.phtml</template></action>
			<reference name="checkout.onepage.review.info.totals">
				<action method="setTemplate"><template>mec/checkout/onepage/review/totals.phtml</template></action>
			</reference>
		</reference>
	</checkout_onepage_review>
	
	
	
	<sales_order_view>
        <reference name="order_totals">
            <block type="pointsaddon/sales_totals_points" name="points.order.totals" />
        </reference>
    </sales_order_view>
    <sales_order_print>
        <reference name="order_totals">
            <block type="pointsaddon/sales_totals_points" name="points.order.totals" />
        </reference>
    </sales_order_print>
    <sales_email_order_items>
        <reference name="order_totals">
            <block type="pointsaddon/sales_totals_points" name="points.order.totals" />
        </reference>
    </sales_email_order_items>

    <sales_order_invoice>
        <reference name="invoice_totals">
            <block type="pointsaddon/sales_totals_points" name="points.order.totals" />
        </reference>
    </sales_order_invoice>
    <sales_order_printinvoice>
        <reference name="invoice_totals">
            <block type="pointsaddon/sales_totals_points" name="points.order.totals" />
        </reference>
    </sales_order_printinvoice>
    <sales_email_order_invoice_items>
        <reference name="invoice_totals">
            <block type="pointsaddon/sales_totals_points" name="points.order.totals" />
        </reference>
    </sales_email_order_invoice_items>

    <sales_order_creditmemo>
        <reference name="creditmemo_totals">
            <block type="pointsaddon/sales_totals_points" name="points.order.totals" />
        </reference>
    </sales_order_creditmemo>
    <sales_order_printcreditmemo>
        <reference name="creditmemo_totals">
            <block type="pointsaddon/sales_totals_points" name="points.order.totals" />
        </reference>
    </sales_order_printcreditmemo>
    <sales_email_order_creditmemo_items>
        <reference name="creditmemo_totals">
            <block type="pointsaddon/sales_totals_points" name="points.order.totals" />
        </reference>
    </sales_email_order_creditmemo_items>
	
	
	
</layout>	