<?php $_product = $this->getProduct(); ?>
<?php $productId = $_product->getId(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if($_product->isSaleable()): ?>
    <div class="add-to-cart">
        <?php if(!$_product->isGrouped()): ?>
        <label for="qty"><?php echo $this->__('Qty:') ?></label>
			<?php if(Mage::getSingleton('customer/session')->isLoggedIn() && Mage::helper('pointsaddon')->canConvertPoints($productId) && Mage::helper('pointsaddon/addon')->isPointsCategory($_product->getCategoryIds())): ?>
				<?php if(Mage::helper('pointsaddon/addon')->getProductMaximum($productId) != ""){ ?>
					<select class="validate-select select" name="qty" >
						<?php foreach(Mage::helper('pointsaddon/addon')->getProductMaximum($productId) as $qty){ ?>
							<option value="<?php echo $qty; ?>"><?php echo $qty; ?></option>
						<?php } ?>
					</select>
				<?php }else{ ?>
					<input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
				<?php } ?>
			<?php else: ?>
				<input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
			<?php endif; ?>
        <?php endif; ?>
        <button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
	<?php if(Mage::getSingleton('customer/session')->isLoggedIn()):?>
		<?php if(Mage::helper('pointsaddon')->canConvertPoints($productId) && Mage::helper('pointsaddon/addon')->isPointsCategory($_product->getCategoryIds())): ?>
			<div class="points_set_id">
				<div id="ajax_result"></div>
				<label><?php echo $this->__('Integral formula'); ?></label>
				<div class="choose_elm">
					<?php foreach(Mage::helper('pointsaddon/addon')->getPointsCollection($productId, Mage::getSingleton('customer/session')->getCustomerGroupId()) as $value): ?>
						<input id="points_set_id_<?php echo $value->getId(); ?>" type="radio" name="points_set_id" class="input validate-one-required" value="<?php echo $value->getId(); ?>"/>
						<label for="points_set_id_<?php echo $value->getId(); ?>"><?php echo $this->__('%s points + %s price', $value->getPoints(), Mage::helper('core')->currency(Mage::helper('pointsaddon')->convertToStoreCurreny($value->getBasePrice()), true, false)) ?></label>
						<br />
					<?php endforeach; ?>
				</div>
				
			</div>
			
			<script type="text/javascript">
			jQuery(document).ready(function($){
				$("input[type=radio][name='points_set_id']").click(function(){
					var qty = 0;
					if($("select[name='qty']").length > 0){
						qty = $("select[name='qty']").val();
					}else{
						qty = $("#qty").val();
					}
					$('.add-to-cart .btn-cart').removeAttr('onclick');
					$.ajax({
						url: '<?php echo $this->getUrl('pointsaddon/ajax/calculateParam'); ?>',
						data:{
							qty : qty,
							points_set_id : $(this).val()
						},
						type:'post',    
						cache:false,    
						dataType:'json',
						success:function(data) {
							$('#ajax_result').html(data.html);
							$('.add-to-cart .btn-cart').attr('onclick', 'productAddToCartForm.submit(this)');
						},
						error : function() {alert('Error')}
					});
				});
			})
			</script>
		<?php endif; ?>
	<?php endif; ?>
	
	
<?php endif; ?>
