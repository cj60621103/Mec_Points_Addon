<?xml version="1.0"?>
<layout>
    <adminhtml_catalog_product_edit>
        <reference name="product_tabs">
            <action method="addTab">
                <name>points</name>
                <block>pointsaddon/adminhtml_catalog_product_tab</block>
            </action>
        </reference>
    </adminhtml_catalog_product_edit>
	
	
	
	<adminhtml_sales_order_view>
		<reference name="left">
			<reference name="sales_order_tabs">
				<reference name="order_tab_info">
					<reference name="order_items">
						<action method="setTemplate"><template>mec/pointsaddon/sales/order/view/items.phtml</template></action>
						<action method="addItemRender"><type>default</type><block>adminhtml/sales_order_view_items_renderer_default</block><template>mec/pointsaddon/sales/order/view/items/renderer/default.phtml</template></action>
					</reference>
				</reference>
			</reference>
		</reference>
        <reference name="order_totals">
            <block type="pointsaddon/adminhtml_sales_order_totals_points" name="pointsaddon.order.totals" template="mec/pointsaddon/sales/totals/points.phtml" />
        </reference>
    </adminhtml_sales_order_view>
	
    <adminhtml_sales_order_invoice_new>       
        <reference name="invoice_totals">
            <block type="pointsaddon/adminhtml_sales_order_totals_points" name="pointsaddon.invoice.totals" template="mec/pointsaddon/sales/totals/points.phtml" />
        </reference>
    </adminhtml_sales_order_invoice_new>
	
    <adminhtml_sales_order_invoice_view>       
        <reference name="invoice_totals">
            <block type="pointsaddon/adminhtml_sales_order_totals_points" name="pointsaddon.invoice.totals" template="mec/pointsaddon/sales/totals/points.phtml" />
        </reference>      
    </adminhtml_sales_order_invoice_view>
	
    <adminhtml_sales_order_invoice_updateqty>       
        <reference name="invoice_totals">
            <block type="pointsaddon/adminhtml_sales_order_totals_points" name="pointsaddon.invoice.totals" template="mec/pointsaddon/sales/totals/points.phtml" />
        </reference>        
    </adminhtml_sales_order_invoice_updateqty>
	
    <adminhtml_sales_order_creditmemo_view>        
        <reference name="creditmemo_totals">
            <block type="pointsaddon/adminhtml_sales_order_totals_points" name="pointsaddon.invoice.totals" template="mec/pointsaddon/sales/totals/points.phtml" />
        </reference>        
    </adminhtml_sales_order_creditmemo_view>
	
	
	
	
	
	
</layout>